  <script>
    // Get references to DOM elements
    const buttons = document.querySelectorAll('.nav-button');
    const sections = document.querySelectorAll('main section');
    const summarizeProgramBtn = document.getElementById('summarize-program-btn');
    const loadingSpinner = document.getElementById('loading-spinner');
    const messageModal = document.getElementById('message-modal');
    const closeModalBtn = document.getElementById('close-modal-btn');
    const modalTitle = document.getElementById('modal-title');
    const modalMessage = document.getElementById('modal-message');

    /**
     * Shows the custom message modal with a given title and message.
     * @param {string} title - The title of the message.
     * @param {string} message - The content of the message.
     */
    function showMessageModal(title, message) {
      modalTitle.textContent = title;
      modalMessage.textContent = message;
      messageModal.style.display = 'flex'; // Use flex to center content
    }

    // Event listener for closing the modal
    closeModalBtn.addEventListener('click', () => {
      messageModal.style.display = 'none';
    });

    // Close modal if user clicks outside of it
    window.addEventListener('click', (event) => {
      if (event.target === messageModal) {
        messageModal.style.display = 'none';
      }
    });

    // Navigation buttons functionality
    buttons.forEach(button => {
      button.addEventListener('click', () => {
        const targetId = button.dataset.target;

        sections.forEach(section => {
          if (section.id === targetId) {
            section.classList.remove('hidden');
          } else {
            section.classList.add('hidden');
          }
        });
      });
    });

    // Summarize program button functionality with Gemini API integration
    summarizeProgramBtn.addEventListener('click', async () => {
      loadingSpinner.style.display = 'block'; // Show spinner

      // Get the electoral program text from the section
      const electoralProgramSection = document.getElementById('electoral-program');
      // Exclude the button and spinner from the text to be summarized
      const programContentElements = electoralProgramSection.querySelectorAll('h2, p, h3, ul');
      let programText = '';
      programContentElements.forEach(element => {
        // Only include elements that are not the button or spinner's parent
        if (!element.closest('.text-center') || (element.tagName === 'H2' || element.tagName === 'P')) {
            programText += element.textContent + '\n';
        }
      });
      
      const prompt = `لخص البرنامج الانتخابي التالي في بضعة أسطر، مع التركيز على النقاط الرئيسية فقط:\n\n${programText.trim()}`;

      try {
        let chatHistory = [];
        chatHistory.push({ role: "user", parts: [{ text: prompt }] });
        const payload = { contents: chatHistory };
        const apiKey = ""; // If you want to use models other than gemini-2.0-flash or imagen-3.0-generate-002, provide an API key here. Otherwise, leave this as-is.
        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

        const response = await fetch(apiUrl, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        const result = await response.json();

        if (result.candidates && result.candidates.length > 0 &&
            result.candidates[0].content && result.candidates[0].content.parts &&
            result.candidates[0].content.parts.length > 0) {
          const summary = result.candidates[0].content.parts[0].text;
          showMessageModal('تلخيص البرنامج الانتخابي', summary);
        } else {
          showMessageModal('خطأ في التلخيص', 'لم يتمكن من تلخيص البرنامج الانتخابي. يرجى المحاولة مرة أخرى.');
          console.error('Unexpected API response structure:', result);
        }
      } catch (error) {
        showMessageModal('خطأ', 'حدث خطأ أثناء الاتصال بواجهة برمجة التطبيقات: ' + error.message);
        console.error('Error fetching summary:', error);
      } finally {
        loadingSpinner.style.display = 'none'; // Hide spinner
      }
    });
  </script>
</body>
